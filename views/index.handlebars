<style>
    /* Ajusta el tamaño del contenedor */
    .portfolio-item {
        width: 350px; /* Ancho fijo */
        height: 250px; /* Alto fijo */
        position: relative;
    }

    /* Imagen dentro del contenedor */
    .portfolio-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 5px;
    }

    /* Fondo gris y texto en caso de error */
    .portfolio-item .fallback {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: gray;
        color: white;
        width: 100%;
        height: 100%;
        border-radius: 5px;
        text-align: center;
    }

    /* Estilo del ícono de "+" */
    .portfolio-item-caption {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .portfolio-item:hover .portfolio-item-caption {
        opacity: 1;
    }
</style>

<script>
    const apiUrl = "http://localhost:3000/api/portfoliosgrupales";

    async function loadPortfolioItems() {
        try {
            const response = await fetch(apiUrl);
            const portfolios = await response.json();

            const itemsContainer = document.getElementById("portfolioItems");

            portfolios.forEach((portfolio, index) => {
                const itemHTML = `
                    <div class="col-md-6 col-lg-4 mb-5">
                        <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#portfolioModal${index + 1}">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="${portfolio.imgProyecto}" alt="${portfolio.nombreProyecto}" 
                                onerror="handleImageError(this, '${portfolio.nombreProyecto}')"/>
                        </div>
                    </div>
                `;
                itemsContainer.innerHTML += itemHTML;
            });
        } catch (error) {
            console.error("Error al cargar los ítems del portafolio:", error);
        }
    }

    // Función para manejar errores al cargar imágenes
    function handleImageError(imgElement, projectName) {
        const fallbackDiv = document.createElement("div");
        fallbackDiv.classList.add("fallback");
        fallbackDiv.textContent = projectName;

        const parent = imgElement.parentElement;
        parent.removeChild(imgElement);
        parent.appendChild(fallbackDiv);
    }

    // Cargar los ítems del portafolio
    loadPortfolioItems();
</script>

