<script>
    // URL de la API
    const apiUrl2 = "http://localhost:3000/api/portfoliosgrupales";

    // Función para cargar y generar los modales
    async function loadPortfolioModals() {
        try {
            // Realizar la solicitud a la API
            const response = await fetch(apiUrl2);
            const proyectos = await response.json();

            // Seleccionar el contenedor donde se agregarán los modales
            const modalContainer = document.getElementById("portfolioModals");

            // Recorrer los proyectos y crear modales dinámicamente
            proyectos.forEach((proyecto, index) => {
                const modalHTML = `
                    <!-- Portfolio Modal ${index + 1} -->
                    <div class="portfolio-modal modal fade" id="portfolioModal${index + 1}" tabindex="-1"
                        aria-labelledby="portfolioModal${index + 1}" aria-hidden="true">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content">
                                <div class="modal-header border-0">
                                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-center pb-5">
                                    <div class="container">
                                        <div class="row justify-content-center">
                                            <div class="col-lg-8">
                                                <!-- Portfolio Modal - Title -->
                                                <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">
                                                    ${proyecto.nombreProyecto}
                                                </h2>
                                                <!-- Icon Divider -->
                                                <div class="divider-custom">
                                                    <div class="divider-custom-line"></div>
                                                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                                    <div class="divider-custom-line"></div>
                                                </div>
                                                <!-- Portfolio Modal - Image -->
                                                <img class="img-fluid rounded mb-5" src="${proyecto.imgProyecto}" alt="${proyecto.nombreProyecto}" />
                                                <!-- Portfolio Modal - Text -->
                                                <p class="mb-4"><strong>Descripción del Proyecto:</strong> ${proyecto.descripcionProyecto}</p>
                                                <p class="mb-4"><strong>Duración:</strong> ${proyecto.duracionProyecto}</p>
                                                <p class="mb-4"><strong>Tecnologías Empleadas:</strong> ${proyecto.tecnologiasProyecto}</p>
                                                <button class="btn btn-primary" data-bs-dismiss="modal">
                                                    <i class="fas fa-xmark fa-fw"></i>
                                                    Close Window
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                // Insertar el modal generado en el contenedor
                modalContainer.innerHTML += modalHTML;
            });
        } catch (error) {
            console.error("Error al cargar los modales:", error);
        }
    }

    // Llamar a la función para cargar los modales
    loadPortfolioModals();
</script>

